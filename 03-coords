
import System.Environment
import Data.List
import Data.Char
import System.IO
import System.Random

{-
  Написать программу, которая в зависимости от параметров командной строки
  а) генерирует случайный текстовый файл содержащий декартовы координаты точек на 
  плоскости (по одной точке в каждой строке);
  // generateFile ["d.txt"]
-}
data Point =  Point Double Double
	deriving( Show, Ord, Eq )
	
generateFile :: [String] -> IO ()
generateFile args = do
	let fileName = head args
	readed <- newStdGen
	let (nLines, readed2) = randomR (1, 10) readed
	mapM_ (\x -> x) $ replicate nLines $ do
		readed2 <- newStdGen
		let (x, newGenX) = randomR (-100, 100) readed2 :: ( Double, StdGen)
		let (y, newGenY) = randomR (-100, 100) newGenX :: ( Double, StdGen)
		appendFile fileName $show ( Point x y ) ++ "\n"

{-
  б) определяет по заданному файлу в указанном ранее формате количество точек в 
  каждой из четвертей;
  в) отыскивает наиболее удалённую от начала координат точку.
-}
